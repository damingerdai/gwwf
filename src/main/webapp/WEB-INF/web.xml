<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0"
         metadata-complete="false"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
  <display-name>gwwf</display-name>

  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>org.daming.gwwf.login.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>PersonAdminServlet</servlet-name>
    <servlet-class>org.daming.gwwf.personaladmin.servlet.PersonAdminServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>VehicleManageServlet</servlet-name>
    <servlet-class>org.daming.gwwf.vehiclemanage.servlet.VehicleManageServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>OfficeServlet</servlet-name>
    <servlet-class>org.daming.gwwf.office.servlet.OfficeServlet</servlet-class>
  </servlet>


  <filter>
  	<filter-name>EncordingFilter</filter-name>
  	<filter-class>org.daming.gwwf.filter.EncordingFilter</filter-class>
  	<init-param>
  		<param-name>encoding</param-name>
  		<param-value>utf-8</param-value>
  	</init-param>
  </filter>
  <filter>
  	<filter-name>SessionFilter</filter-name>
  	<filter-class>org.daming.gwwf.filter.SessionFilter</filter-class>
  </filter>
  

  <filter-mapping>
  	<filter-name>EncordingFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
	<filter-name>SessionFilter</filter-name>
	<url-pattern>/*</url-pattern>
  </filter-mapping>
  

  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>PersonAdminServlet</servlet-name>
    <url-pattern>/PersonAdminServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>VehicleManageServlet</servlet-name>
    <url-pattern>/VehicleManageServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>OfficeServlet</servlet-name>
    <url-pattern>/OfficeServlet</url-pattern>
  </servlet-mapping>
   
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
</web-app>